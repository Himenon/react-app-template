{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "es2016", "es2015", "es5", "dom"],
    "strict": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/view-component": ["./src/view-component/index.ts"],
      "@app/container-component": ["./src/container-component/index.ts"],
      "@app/domain": ["./src/domain/index.ts"],
      "@app/infra": ["./src/infra/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "scripts/*.ts", "scripts/push-tag.js"],
  "exclude": ["node_modules", "ts-lib"]
}
